 *= require fonts
 */

$breakpoint: 860px;

html,
body {
  width: 100%;
  height: 100%;
}

body {
  position: relative;
  min-height: 650px;
  margin: 0;

  color: white;

  @media (max-width: $breakpoint) {
    position: static;
    min-width: 0;
    min-height: 0;
    height: 100%;
  }
}

a {
  color: white;
  text-decoration: none;
}

a:hover {
  color: white;
  text-decoration: underline;
}

.cover {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -10;

  background-image: url('<%= asset_path "cover.jpg" %>');
  background-color: black;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: top center;

  @media (max-width: $breakpoint) {
    position: fixed;

    background-image: url('<%= asset_path "cover-mobile.jpg" %>');
  }
}

.callout {
  position: absolute;
  bottom: 0;
  right: 6%;

  width: 275px;

  border: 8px solid rgba(0,0,0,.85);
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  border-bottom: none;

  background-color: rgba(255,240,205,.3);

  font-family: 'Blanch Caps', sans-serif;
  font-weight: 200;
  font-size: 30px;
  line-height: 30px;
  text-align: center;

  @media (max-width: $breakpoint) {
    position: relative;
    top: calc(100% - 140px);
    left: auto;
    right: auto;
    bottom: auto;

    width: 100%;

    border-left: none;
    border-right: none;
    border-radius: 0;
  }

  .fancy-border-thingy {
    margin: 2px 2px 0 2px;
    padding: 0 10px;

    // Prevent collapsing margins
    overflow: hidden;

    background-color: rgba(0,0,0,.85);

    @media (max-width: $breakpoint) {
      margin: 2px 0 0 0;
    }
  }

  h1 {
    position: relative;

    width: 230px;
    height: 95px;
    margin: 20px auto;

    font: 0/0 a;
    text-shadow: none;
    color: transparent;

    background: url('<%= asset_path "sprite@2x.png" %>') no-repeat center;
    background-position: 0 0;
    background-size: 230px 695px;
  }

  p {
    margin: 20px 0;
  }

  .social {
    a {
      display: inline-block;
      width: 75px;
      height: 75px;

      font: 0/0 a;
      text-shadow: none;
      color: transparent;
      line-height: 75px;

      background-image: url('<%= asset_path "sprite@2x.png" %>');
      background-size: 230px 695px;
    }

    .twitter {
      background-position: 0 -620px;
    }

    .twitter:hover {
      background-position: 0 -520px;
    }

    .facebook {
      background-position: 0 -220px;
    }

    .facebook:hover {
      background-position: 0 -120px;
    }

    .hgab {
      background-position: 0 -420px;
    }

    .hgab:hover {
      background-position: 0 -320px;
    }
  }

  .e-mail {
    font-size: 28px;
    display: block;
  }

  .street {
    font-size: 50px;
    display: block;
  }

  .city {
    font-size: 36px;
    display: block;
  }

  .phone-number {
    font-size: 60px;
  }
}

.credits {
  display: none;
  position: absolute;
  left: 10px;
  bottom: 10px;

  font-family: 'Blanch Caps', sans-serif;
  font-size: 24px;
  line-height: 1;
}
