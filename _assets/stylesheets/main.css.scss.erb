 *= require fonts
 */

html,
body {
  width: 100%;
  height: 100%;
}

body {
  position: relative;
  min-width: 950px;
  min-height: 650px;
  margin: 0;

  background-image: url('<%= asset_path "cover.jpg" %>');
  background-color: black;
  background-size: cover;
  background-repeat: no-repeat;

  color: white;
}

a {
  color: white;
  text-decoration: none;
}

a:hover {
  color: white;
  text-decoration: underline;
}

.callout {
  position: absolute;
  bottom: 0;
  right: 6%;

  box-sizing: border-box;
  width: 275px;
  padding: 0 10px;

  background-color: rgba(0,0,0,.85);
  outline: 2px solid rgba(255,240,205,.3);

  font-family: 'Blanch Caps', sans-serif;
  font-weight: 200;
  font-size: 30px;
  line-height: 30px;
  text-align: center;

  &:before {
    position: absolute;
    top: -10px;
    left: -10px;
    right: -10px;
    bottom: 0;
    z-index: -10;

    content: '';

    border: 8px solid rgba(0,0,0,.85);
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    border-bottom: none;
  }

  h1 {
    position: relative;

    width: 230px;
    height: 95px;
    margin: 20px auto;

    font: 0/0 a;
    text-shadow: none;
    color: transparent;

    background: url('<%= asset_path "sprite@2x.png" %>') no-repeat center;
    background-position: 0 0;
    background-size: 230px 695px;
  }

  p {
    margin: 20px 0;
  }

  .social {
    a {
      display: inline-block;
      width: 75px;
      height: 75px;

      font: 0/0 a;
      text-shadow: none;
      color: transparent;
      line-height: 75px;

      background-image: url('<%= asset_path "sprite@2x.png" %>');
      background-size: 230px 695px;
    }

    .twitter {
      background-position: 0 -620px;
    }

    .twitter:hover {
      background-position: 0 -520px;
    }

    .facebook {
      background-position: 0 -220px;
    }

    .facebook:hover {
      background-position: 0 -120px;
    }

    .hgab {
      background-position: 0 -420px;
    }

    .hgab:hover {
      background-position: 0 -320px;
    }
  }

  .e-mail {
    font-size: 28px;
    display: block;
  }

  .street {
    font-size: 50px;
    display: block;
  }

  .city {
    font-size: 36px;
    display: block;
  }

  .phone-number {
    font-size: 60px;
  }
}

.credits {
  position: absolute;
  left: 10px;
  bottom: 10px;

  font-family: 'Blanch Caps', sans-serif;
  font-size: 24px;
  line-height: 1;
}
